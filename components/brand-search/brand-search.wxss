.brand-search-container {
  position: relative;
  width: 100%;
}

.search-input-container {
  position: relative;
  display: flex;
  align-items: center;
  border: 1px solid #e0e0e0;
  border-radius: 4px;
  padding: 8px 12px;
  background-color: #fff;
}

.search-input {
  flex: 1;
  font-size: 14px;
  color: #333;
  border: none;
  outline: none;
}

.clear-icon {
  margin-left: 8px;
}

.dropdown-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #fff;
  border: 1px solid #e0e0e0;
  border-top: none;
  border-radius: 0 0 4px 4px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  max-height: 200px;
}

.dropdown-scroll {
  max-height: 200px;
}

.dropdown-item {
  padding: 12px 16px;
  font-size: 14px;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
  cursor: pointer;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:hover,
.dropdown-item.selected {
  background-color: #f5f5f5;
}

.selected-brand {
  padding: 8px 12px;
  font-size: 14px;
  color: #333;
  background-color: #f5f5f5;
  border-radius: 4px;
}