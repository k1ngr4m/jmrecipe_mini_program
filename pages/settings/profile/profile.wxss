page {
  background-color: #f9f5e6; /* 米黄色背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 0;
  background-color: #f9f5e6;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 顶部导航 */
.top-nav {
  background: #fff;
  box-shadow: 0 1px 4px rgba(0,0,0,0.08);
}

.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 12px;
  backdrop-filter: blur(10px);
  background: rgba(255, 255, 255, 0.3);
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  z-index: 999;
}

.page-title {
  font-size: 18px;
  font-weight: 600;
  color: #222;
}

.nav-header .icon {
  font-size: 20px;
  color: #333;
}

.back-btn, .search-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  transition: background 0.2s ease;
}

.back-btn:hover, .search-btn:hover {
  background: rgba(0,0,0,0.05);
}

.placeholder {
  width: 36px;
}

/* 主内容区 */
.main-content {
  flex: 1;
  margin-top: 5px;
  padding: 15px;
  box-sizing: border-box;
  overflow-x: hidden;
  width: 100%;
  max-width: 100vw;
}

.user-info {
  background-color: white;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  text-align: center;
  margin-bottom: 15px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  display: block;
  margin: 0 auto 15px;
  border: 3px solid #f0e8d6;
}

.nickname {
  display: block;
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

.user-details {
  margin-bottom: 30px;
  text-align: left;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
}

.label {
  color: #666;
  font-weight: 500;
}

.value {
  color: #333;
  font-weight: 500;
}

.edit-btn {
  width: 90%;
  max-width: 300px;
  background: linear-gradient(135deg, #4a90e2, #357abd);
  color: white;
  border: none;
  padding: 14px;
  border-radius: 25px;
  font-size: 17px;
  font-weight: 600;
  margin: 10px auto 15px;
  box-shadow: 0 4px 15px rgba(53, 122, 189, 0.3);
  transition: all 0.3s;
  letter-spacing: 1px;
  display: block;
}

.edit-btn:hover {
  background: linear-gradient(135deg, #3a80d2, #256aac);
  box-shadow: 0 6px 20px rgba(53, 122, 189, 0.4);
  transform: translateY(-2px);
}

.edit-btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 10px rgba(53, 122, 189, 0.3);
}

.logout-btn {
  width: 90%;
  max-width: 300px;
  background-color: #ff4d4f;
  color: white;
  border: none;
  padding: 14px;
  border-radius: 25px;
  font-size: 17px;
  font-weight: 600;
  margin: 0 auto;
  box-shadow: 0 4px 15px rgba(255, 77, 79, 0.3);
  transition: all 0.3s;
  letter-spacing: 1px;
  display: block;
}

.logout-btn:hover {
  background-color: #e6393b;
  box-shadow: 0 6px 20px rgba(255, 77, 79, 0.4);
  transform: translateY(-2px);
}

.logout-btn:active {
  transform: translateY(0);
  box-shadow: 0 2px 10px rgba(255, 77, 79, 0.3);
}

.not-logged-in {
  text-align: center;
  padding: 50px 0;
  color: #999;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

/* 响应式设计 */
@media (max-width: 350px) {
  .main-content {
    padding: 10px;
  }
  
  .user-info {
    padding: 15px;
  }
  
  .detail-item {
    padding: 10px 0;
  }
}

@media (min-width: 400px) {
  .main-content {
    padding: 20px;
    max-width: 450px;
    margin: 0 auto;
  }
}