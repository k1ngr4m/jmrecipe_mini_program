<view class="container">
  <view class="edit-form">
    <form bindsubmit="updateClothing">
      <!-- 图片上传 -->
      <view class="form-item">
        <text class="label">图片</text>
        <view class="image-upload">
          <view class="upload-area" bindtap="chooseAndUploadImage">
            <image wx:if="{{imageUrl}}" src="{{imageUrl}}" class="preview-image" />
            <text wx:else class="upload-text">点击上传图片</text>
          </view>
        </view>
      </view>
      
      <!-- 名称 -->
      <view class="form-item">
        <text class="label">名称 *</text>
        <input class="input" name="name" value="{{name}}" placeholder="请输入衣物名称" required />
      </view>
      
      <!-- 分类 -->
      <view class="form-item">
        <text class="label">分类 *</text>
        <input class="input" name="category" value="{{category}}" placeholder="请输入衣物分类" required />
      </view>
      
      <!-- 颜色 -->
      <view class="form-item">
        <text class="label">颜色</text>
        <picker mode="selector" range="{{colorOptions}}" value="{{colorIndex}}" bindchange="onColorChange">
          <view class="picker">
            <text wx:if="{{color}}">{{color}}</text>
            <text wx:else>请选择颜色</text>
          </view>
        </picker>
      </view>
      
      <!-- 品牌 -->
      <view class="form-item">
        <text class="label">品牌</text>
        <input class="input" name="brand" value="{{brand}}" placeholder="请输入品牌" />
      </view>
      
      <!-- 购买日期 -->
      <view class="form-item">
        <text class="label">购买日期</text>
        <picker mode="date" value="{{purchaseDate}}" bindchange="bindDateChange">
          <view class="date-picker">
            <text wx:if="{{purchaseDate}}">{{purchaseDate}}</text>
            <text wx:else>请选择购买日期</text>
          </view>
        </picker>
      </view>
      
      <!-- 价格 -->
      <view class="form-item">
        <text class="label">价格</text>
        <input class="input" name="price" value="{{price}}" type="digit" placeholder="请输入价格" />
      </view>
      
      <!-- 操作按钮 -->
      <view class="form-actions">
        <button class="cancel-btn" bindtap="cancelEdit">取消</button>
        <button class="save-btn" form-type="submit">保存</button>
      </view>
    </form>
  </view>
</view>