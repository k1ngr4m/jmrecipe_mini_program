.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.modal-form-wrapper {
  max-height: calc(100vh - 40rpx);
}

.modal-form {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-group {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 30rpx;
}

.form-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #666;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #ff6600;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.submit-btn:active {
  background-color: #e65c00;
}