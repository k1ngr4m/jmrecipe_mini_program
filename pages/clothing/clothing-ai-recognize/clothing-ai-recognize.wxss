.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.modal-form-wrapper {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.modal-form {
  width: 100%;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007aff;
}

.picker {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  background-color: white;
}

.image-upload {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #e0e0e0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

.image-upload:active {
  background-color: #f0f0f0;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  object-fit: cover;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.upload-icon {
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
  color: #999;
}

.recognize-btn {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.recognize-btn:active {
  background-color: #0062cc;
}

.recognize-btn:disabled {
  background-color: #cccccc;
}

.submit-btn {
  width: 100%;
  height: 80rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
}

.submit-btn:active {
  background-color: #0062cc;
}

.result-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.result-label {
  font-size: 28rpx;
  color: #333;
  min-width: 120rpx;
}

.result-value {
  font-size: 28rpx;
  color: #666;
}

.result-input {
  flex: 1;
  margin-left: 20rpx;
}