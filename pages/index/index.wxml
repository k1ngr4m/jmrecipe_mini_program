<view class="container">
  <!-- 顶部导航区 -->
  <view class="top-nav">
    <!-- 搜索栏 -->
    <view class="search-bar">
      <text class="search-icon">🔍</text>
      <input class="search-input" placeholder="搜索功能、内容" />
      <text class="cancel-btn">取消</text>
    </view>
    
    <!-- 天气模块 -->
    <view class="weather-module">
      <view class="weather-info">
        <text class="weather-icon">{{weather.icon}}</text>
        <view class="temperature">{{weather.temperature}}°C</view>
        <view class="weather-desc">{{weather.text}}</view>
      </view>
      <view class="clothes-suggestion">{{clothesSuggestion}}</view>
    </view>
  </view>
  
  <!-- 中间功能区 -->
  <view class="main-content">
    <!-- 4宫格功能入口 -->
    <view class="grid-modules">
      <view class="module-item" bindtap="goToClothing">
        <text class="module-icon">👕</text>
        <text class="module-title">衣</text>
        <text class="module-subtitle">穿搭管理</text>
      </view>
      <view class="module-item" bindtap="goToFood">
        <text class="module-icon">🍎</text>
        <text class="module-title">食</text>
        <text class="module-subtitle">美食推荐</text>
      </view>
      <view class="module-item" bindtap="goToLiving">
        <text class="module-icon">🏠</text>
        <text class="module-title">住</text>
        <text class="module-subtitle">安居社区</text>
      </view>
      <view class="module-item" bindtap="goToTravel">
        <text class="module-icon">🚗</text>
        <text class="module-title">行</text>
        <text class="module-subtitle">旅行规划</text>
      </view>
    </view>
    
    <!-- 智能推荐模块 -->
    <view class="recommend-section">
      <view class="recommend-header">
        <text class="recommend-title">智能推荐</text>
        <text class="more-btn">更多 ></text>
      </view>
      <scroll-view class="recommend-content" scroll-x>
        <view class="recommend-card">
          <view class="card-image"></view>
          <text class="card-title">夏日穿搭指南</text>
        </view>
        <view class="recommend-card">
          <view class="card-image"></view>
          <text class="card-title">健康饮食计划</text>
        </view>
        <view class="recommend-card">
          <view class="card-image"></view>
          <text class="card-title">家居布置灵感</text>
        </view>
      </scroll-view>
    </view>
  </view>
</view>