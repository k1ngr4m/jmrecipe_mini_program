/**profile.wxss**/
page {
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.content {
  padding: 20rpx;
}

.profile-section {
  background-color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.profile-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.profile-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.avatar-container, .value-container {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.value {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
  opacity: 0.5;
}

.logout-btn {
  width: 100%;
  background-color: #ff6600;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.logout-btn::after {
  border: none;
}