<view class="container">
  <!-- 穿搭列表 -->
  <scroll-view class="outfit-list" scroll-y>
    <view wx:if="{{outfitList.length > 0}}" class="outfit-list-container">
      <block wx:for="{{outfitList}}" wx:key="id">
        <view class="outfit-card" bindtap="goToOutfitDetail" data-id="{{item.id}}" data-item="{{item}}">
          <image class="outfit-img" src="{{item.image_url || '../../images/default-outfit.png'}}" mode="aspectFill"></image>
          <view class="outfit-info">
            <view class="outfit-name">{{item.name}}</view>
            <view class="outfit-description">{{item.description}}</view>
            <view class="outfit-meta">
              <text wx:if="{{item.created_at}}">创建时间: {{item.created_at}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
    
    <!-- 空状态 -->
    <view class="empty-state" wx:elif="{{!isLoading}}">
      <text class="empty-text">暂无穿搭数据</text>
    </view>
    
    <!-- 加载更多提示 -->
    <view class="loading-more" wx:if="{{isLoading && outfitList.length > 0}}">
      <text class="loading-text">加载中...</text>
    </view>
    
    <!-- 没有更多数据提示 -->
    <view class="no-more" wx:elif="{{!hasMore && outfitList.length > 0}}">
      <text class="no-more-text">没有更多数据了</text>
    </view>
  </scroll-view>
  
  <!-- 悬浮添加按钮 -->
  <view class="fab" bindtap="addOutfit">
    <text>＋</text>
  </view>
</view>