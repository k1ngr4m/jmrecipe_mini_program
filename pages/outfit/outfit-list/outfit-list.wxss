page {
  background-color: #f9f5e6; /* 米黄色背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: flex-start;
  padding: 10px;
  box-sizing: border-box;
}

.outfit-list {
  flex: 1;
  padding: 10px;
}

.outfit-list-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.outfit-card {
  width: calc(50% - 10px);
  margin-bottom: 20px;
  background-color: #fff;
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 3px 10px rgba(0,0,0,0.08);
  transition: transform 0.2s, box-shadow 0.2s;
  position: relative;
}

.outfit-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 15px rgba(0,0,0,0.12);
}

.outfit-img {
  width: 100%;
  height: 180px;
  object-fit: cover;
}

.outfit-info {
  padding: 12px;
}

.outfit-name {
  font-weight: bold;
  margin-bottom: 6px;
  color: #6d5836;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 15px;
}

.outfit-description {
  color: #666;
  font-size: 13px;
  overflow: hidden;
  white-space: normal;
  word-wrap: break-word;
  line-height: 1.4;
  margin-top: 4px;
}

.outfit-meta {
  color: #999;
  font-size: 12px;
  margin-top: 8px;
}

.empty-state {
  text-align: center;
  padding: 60px 20px;
  color: #aaa;
}

.empty-text {
  font-size: 16px;
  color: #a68d63;
}

.loading-more, .no-more {
  text-align: center;
  padding: 15px;
  color: #999;
}

.loading-text, .no-more-text {
  font-size: 14px;
}

/* 右下角悬浮按钮 */
.fab {
  position: fixed;
  right: 20px;
  bottom: 20px;
  width: 56px;
  height: 56px;
  background-color: #d8b95f;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 28px;
  box-shadow: 0 4px 15px rgba(216, 185, 95, 0.4);
  transition: all 0.2s;
  z-index: 900;
}

.fab:hover {
  transform: scale(1.05);
  box-shadow: 0 6px 20px rgba(216, 185, 95, 0.5);
}

/* 响应式设计 - 适配不同屏幕尺寸 */
@media (max-width: 350px) {
  .outfit-card {
    width: 100%;
    margin-bottom: 15px;
  }
  
  .outfit-img {
    height: 160px;
  }
}

@media (min-width: 351px) and (max-width: 400px) {
  .outfit-card {
    width: calc(50% - 8px);
    margin-bottom: 16px;
  }
  
  .outfit-img {
    height: 170px;
  }
}

@media (min-width: 401px) {
  .outfit-card {
    width: calc(50% - 10px);
    margin-bottom: 20px;
  }
  
  .outfit-img {
    height: 180px;
  }
}