page {
  background-color: #f9f5e6; /* 米黄色背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20px;
  min-height: 100vh;
  box-sizing: border-box;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #6d5836;
  margin-bottom: 10px;
}

/* 穿搭名称输入 */
.outfit-name-section {
  width: 100%;
  margin-bottom: 20px;
}

.outfit-name-input {
  width: 100%;
  height: 40px;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 14px;
  box-sizing: border-box;
}

/* 穿搭类型选择 */
.outfit-type-section {
  margin-bottom: 20px;
  width: 100%;
}

.outfit-type-picker {
  width: 100%;
  height: 40px;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
}

.picker-text {
  color: #666;
}

.picker-arrow {
  color: #999;
  font-size: 12px;
}

/* 一级分类导航 */
.primary-categories {
  white-space: nowrap;
  overflow-x: auto;
  margin-bottom: 20px;
  padding: 5px 0;
}

.primary-categories::-webkit-scrollbar {
  display: none;
}

.category-item {
  display: inline-block;
  padding: 8px 16px;
  margin-right: 10px;
  background-color: #f0e8d6;
  border-radius: 20px;
  font-size: 14px;
  transition: all 0.2s;
  cursor: pointer;
  border: 1px solid #f0e8d6;
}

.category-item:last-child {
  margin-right: 0;
}

.category-item.active {
  background-color: #d8b95f;
  color: #fff;
  box-shadow: 0 2px 8px rgba(216, 185, 95, 0.3);
  border-color: #d8b95f;
}

.category-item:hover {
  background-color: #ffe8b0;
}

/* 服装列表区域 */
.clothing-list-section {
  margin-bottom: 20px;
}

.clothing-list {
  white-space: nowrap;
  overflow-x: auto;
  padding: 5px 0;
}

.clothing-list::-webkit-scrollbar {
  display: none;
}

.clothing-list-container {
  display: inline-flex;
}

.clothing-item {
  display: inline-block;
  width: 100px;
  margin-right: 15px;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  cursor: pointer;
  transition: transform 0.2s;
}

.clothing-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 4px 10px rgba(0,0,0,0.12);
}

.clothing-img {
  width: 100%;
  height: 100px;
  object-fit: cover;
}

.clothing-name {
  padding: 8px;
  font-size: 12px;
  color: #666;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Canvas画布区域 */
.canvas-section {
  width: 100%;
  flex: 1;
  margin-bottom: 20px;
}

.canvas-container {
  position: relative;
  width: 100%;
  height: 300px;
  background-color: #f5f5f5;
  border: 1px solid #ddd;
  border-radius: 10px;
  overflow: hidden;
}

.outfit-canvas {
  width: 100%;
  height: 100%;
  display: block;
}

/* 注意：canvas-items-container和相关样式已移除，因为服装项现在通过canvas绘制 */

/* Canvas操作按钮 */
.canvas-controls {
  display: flex;
  justify-content: center;
  gap: 10px;
  padding: 10px 0;
}

.control-btn {
  padding: 8px 12px;
  background-color: #d8b95f;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  cursor: pointer;
}

.control-btn:hover {
  background-color: #c7a84a;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 15px;
  padding: 10px 0;
}

.btn {
  flex: 1;
  padding: 14px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 500;
  border: none;
  cursor: pointer;
  transition: all 0.2s;
}

.test-btn {
  background-color: #3498db;
  color: white;
}

.test-btn:hover {
  background-color: #2980b9;
}


.cancel-btn {
  background-color: #f0f0f0;
  color: #666;
}

.cancel-btn:hover {
  background-color: #e0e0e0;
}

.save-btn {
  background-color: #d8b95f;
  color: white;
  box-shadow: 0 4px 15px rgba(216, 185, 95, 0.3);
}

.save-btn:hover {
  background-color: #c7a84a;
  box-shadow: 0 6px 20px rgba(216, 185, 95, 0.4);
  transform: translateY(-2px);
}

.btn:active {
  transform: translateY(0);
}