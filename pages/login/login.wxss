.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f8f8f8;
  position: relative;
}

.login-header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.login-content {
  width: 80%;
  margin-bottom: 100rpx;
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  border: none;
  margin-bottom: 30rpx;
}

.logged-in-info {
  font-size: 28rpx;
  color: #666;
  padding: 30rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
}

.login-btn::after {
  border: none;
}

.login-footer {
  position: absolute;
  bottom: 60rpx;
  width: 80%;
  text-align: center;
}

.agreement {
  font-size: 24rpx;
  color: #999;
}

/* 隐私授权弹窗样式 */
.privacy-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.privacy-content {
  background-color: white;
  width: 80%;
  border-radius: 20rpx;
  padding: 40rpx;
}

.privacy-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.privacy-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.privacy-buttons {
  display: flex;
  justify-content: space-between;
}

.privacy-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
}

.disagree {
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.agree {
  background-color: #07c160;
  color: white;
  margin-left: 20rpx;
}